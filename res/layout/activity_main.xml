<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnQuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="onClickQuit"
        android:text="退出" />

    <Button
        android:id="@+id/btnTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/btnQuit"
        android:layout_below="@+id/btnQuit"
        android:onClick="onClickTest"
        android:text="测试" />

    <Button
        android:id="@+id/btnAddHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/btnTest"
        android:layout_below="@+id/btnTest"
        android:onClick="onClickAddHeight"
        android:text="按钮高度增加" />

    <Button
        android:id="@+id/btnMinusHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/btnAddHeight"
        android:layout_below="@+id/btnAddHeight"
        android:onClick="onClickMinusHeight"
        android:text="按钮高度减小" />

    <Button
        android:id="@+id/btnSetButtonBg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnMinusHeight"
        android:layout_alignRight="@+id/btnMinusHeight"
        android:layout_below="@+id/btnMinusHeight"
        android:text="设置按钮背景色" />

    <Button
        android:id="@+id/btnSetTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnSetButtonBg"
        android:layout_alignRight="@+id/btnSetButtonBg"
        android:layout_below="@+id/btnSetButtonBg"
        android:text="设置文字颜色" />

</RelativeLayout>