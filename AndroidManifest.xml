            android:name="tv.sanrenxing.awang.simulatekey.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="tv.sanrenxing.awang.simulatekey.SimulateKeyService"
            android:exported="true" >
            <intent-filter>
                <action android:name="tv.sanrenxing.awang.simulatekey.SimulateKeyService" />
            </intent-filter>
        </service>
    </application>

</manifest>